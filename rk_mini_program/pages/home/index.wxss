/* pages/home/index.wxss */
view{
  margin: 0rpx;
  padding: 0rpx;
  font-family:PingFangSC-Medium;
}
.bodys{
  width: 93%;
  margin: 0 auto;
}
/* 搜索的长框 */
.search{
  border-radius: 40rpx;
  display: flex;
  background: #F5F5F5;
  padding: 10rpx 0;
}
/* 搜索的图标 */
.search .icons{
  width: 40rpx;
  margin-left: 50rpx;
  margin-top: 10rpx;
}
.search .icons image{
  width: 30rpx;
  height: 30rpx;
}
/* 提示语 */
.search .texts{
  color: #999999;
  font-size: 30rpx;
  line-height: 50rpx;
}

/* 轮播图 */
.carousel{
  margin-top: 40rpx;
}
.carousel .imgs{
    width: 100%;
    height: 330rpx;
}
/* 商品带图标的分类 */
.icon-classify{
  display: flex;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}
.icon-classify .icon-bodys{
  width: 20%;
  margin-left: 5%;
}
.icon-classify .icon-bodys .icon-imgs image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.icon-classify .icon-bodys .icon-texts{
  font-size: 25rpx;
  color: #333333;
  margin-top: 10rpx;
}
/* 滚动分类导航框 */
.scroll-header{
  display: flex;
  white-space: nowrap; /*这个很重要，*/
}
/* 导航条的样式 */
.scroll-header view{
  display: inline-block;/*这个也很重要*/
  line-height: 65rpx;
  /* border:1px solid red; */
  margin-right: 30rpx;
  font-size: 30rpx;
  color: #999999;
}


/* 去掉默认滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
/* //滚动条定位 */
.location{
   position: fixed;
   top: 0;
   background: #fff;
}


/* 全球分红 */
.gd-background{
   background: url('https://jibao-rk0514.oss-cn-beijing.aliyuncs.com/images/quanqiufenhong@2x.png') no-repeat;
   background-size: 100%;
   height: 170rpx;
}
.gd-background .gd-body{
   display: flex;
}
.gd-background .gd-body .gd-body-left{
   margin-left:210rpx; 
   padding-top: 69rpx;
   padding-right: 10rpx;
}
.gd-background .gd-body .gd-body-right{
   padding-top: 36rpx;
}
.scroll-data{
    line-height: 32rpx;
    height: 32rpx;
    padding: 0 5rpx;
    text-align: center;
    font-size: 25rpx;
    overflow: hidden;
    display: inline-block;
    position: relative;
    color: #FF5E00;
    background: linear-gradient(#FFF2B5, #FCC02E);
    margin: 0 5rpx;
}
.scroll-num{
    width:26rpx;
    display:inline-block;
    position: relative;
    top:0rpx;
}
.unit-num{
    height: 42rpx;
    overflow: hidden;
    display: block;
}
.gd-body-right image{
  width: 90rpx;
  height: 90rpx;
}
/* 返回到顶部 */
.roof{
   position: fixed;
   bottom: 30rpx;
   right: 30rpx;
}
.roof image{
  width: 120rpx;
  height: 120rpx;
}