/* pages/payment/index.wxss */

.payment-li{
  width: 92%;
  margin: 0 auto;
  display: flex;
  padding: 20rpx 15rpx;
  margin-top: 20rpx;
  background: #fff;
  border-radius: 10rpx;
}
.payment-li .payment-imgs{
  width: 20%;
}
.payment-li .payment-imgs image{
   width: 80rpx;
   height: 80rpx;
}
.payment-li .payment-text{
    width: 80%;
    line-height: 80rpx;
    font-size: 35rpx;
}
.payment-li .payment-icon image{
    width: 15rpx;
    height: 20rpx;
    margin-top: 34rpx;
}

/* 提示弹出层 */
.show-body{
   font-size: 30rpx;
}
.show-hint{
    text-align: center;
    padding-top:20rpx; 
}
.show-text{
  text-align: center;
  color: #666666;
  width: 500rpx;
  padding-top:20rpx; 
  padding-bottom: 20rpx;


}
.show-botton{
   display: flex;
   border: solid 1rpx #EBEBEB;
}
.show-botton view{
   width: 50%;
   text-align: center;
   padding: 20rpx 40rpx;
}
.show-botton  .show-de{
   color: #8EB85C;
   border-left: solid 1rpx #EBEBEB;
}

.show-input{
  width: 500rpx;
  display: flex;
  padding-left:130rpx; 
  margin-top: 20rpx;
}
.show-input input{
  border: solid 1rpx #D9D9D9;
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  box-sizing: border-box;
  justify-content: center;
  align-items: center;
}
.forget-pass{
   font-size: 20rpx;
   color: #999999;
   text-align: right;
   padding-right: 50rpx;
   margin-top: 20rpx;
   margin-bottom: 20rpx;
}


.ipt{
  width: 0;
  height: 0;
}
