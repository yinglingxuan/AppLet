/* pages/myMoney/recharge/index.wxss */

.account-top{
   text-align: center;
   border-bottom: solid 20rpx #EAEAEA;
   padding: 120rpx 0;
   background: #fff;
}
.account-top .top-title{
   font-size: 36rpx;
   color: #000;
}
.account-top .top-money{
   font-size: 76rpx;
   color: #8EB85C;
   margin-top: 20rpx;
}

.recharge-body {
   width: 92%;
   margin:0 auto;
}
.recharge-body .recharge-title{
   border-bottom: solid 1rpx #F0F0F0;
   color: #333333;
   font-size: 36rpx;
   padding: 20rpx 10rpx;
   font-weight: bold;
}
.recharge-body .recharge-input{
   border: solid 1rpx #F0F0F0;
   margin-top: 20rpx;
   width: 250rpx;
   padding: 35rpx 0;
   text-align: center;
   font-size: 26rpx;
   box-shadow: 0px 2px 2px #F0F0F0;
}
.recharge-body .button{
   text-align: center;
   padding: 20rpx 0;
   margin-top: 420rpx;
   background: #8EB85C;
   color: #fff;
   font-size: 32rpx;
   border-radius: 10rpx;
}