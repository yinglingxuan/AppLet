/* pages/myMoney/accountMoney/index.wxss */
.account-top{
   text-align: center;
   border-bottom: solid 20rpx #EAEAEA;
   padding: 140rpx 0;
   padding-bottom:40rpx; 
   background: #fff;
}
.account-top .top-title{
   font-size: 36rpx;
   color: #000;
}
.account-top .top-money{
   font-size: 76rpx;
   color: #8EB85C;
   margin-top: 35rpx;
}
.account-top .top-button{
   text-align: right;
   margin-top: 70rpx;
}
.account-top .top-button text{ 
  margin-right: 30rpx;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  color: #fff;
  background: linear-gradient(to left,#B0DC7C , #8EB85C);
  border-radius: 40rpx;
}

/* //信息列表 */
.account-ul {
   background: #fff;
   padding: 0 5%;
   margin: 0 auto;
   padding-bottom: 50rpx;
}
.account-ul .account-title{
   font-size: 36rpx;
   color: #333333;
   line-height: 100rpx;
   border-bottom: solid 1rpx #F0F0F0;
   font-weight: 600;
}


.account-ul .data-lis{
   width: 90%;
   margin: 0 auto;
   display: flex;
   padding: 20rpx 0;
   border-bottom: solid 1rpx #F0F0F0;
}
.account-ul .data-lis .data-left{
   font-size: 28rpx;
   color: #000000;
   width: 50%;
}
.account-ul .data-lis .data-left .data-date{
   color: #999999;
   font-size: 20rpx;
}
.account-ul .data-lis .data-right{
   font-size: 44rpx;
   color: #8EB85C;
   width: 50%;
   text-align: right;
}

/* 积分 */
.integral{
   background: #fff;
   padding-bottom: 40rpx;
}
.integral .integral-null{
    font-size: 30rpx;
    color: #B8B8B8;
    text-align: center;
}