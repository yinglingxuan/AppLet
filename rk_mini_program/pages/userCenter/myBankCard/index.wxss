/* pages/userCenter/myBankCard/index.wxss */
.changeInfo{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 90%;
  box-sizing: border-box;
  margin: 20rpx auto;
}
.BankCard{
  height: 330rpx;
  width: 100%;
  border: 2rpx solid #E5E5E5;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  position: relative
}
.BankCard image{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -1;
}
.BankCard text{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 86rpx;
  margin: auto;
  text-align: center;
  color: #fff;
  font-size: 34rpx;
}

.changeBtn{
  width: 90%;
  height: 100rpx;
  background: #8EB85C;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  border-radius: 6rpx;
  line-height: 100rpx;
  position: fixed;
  bottom: 20rpx;
  left:0;
  right: 0;
  margin: auto;
}