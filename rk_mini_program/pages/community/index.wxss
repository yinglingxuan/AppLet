/* pages/community/index.wxss */
.community-top{
   display: flex;
   padding: 0 20rpx;
   line-height: 65rpx;
   background: #fff;
}
.community-top view{
   width: 50%;
   text-align: center;
   font-size: 30rpx;
   color: #8C8C8C;
}
.community-top view text{
  padding: 10rpx 0;
}
.text-border{
  border-bottom: solid 5rpx #8EB85C;
  font-size: 37rpx;
  font-weight: 600;
  color: #000000;
}

/* //血压血糖 */
.community-uls{
   border-radius: 30rpx 30rpx 0 0;
   background: #fff;
   padding-bottom: 30rpx;
   
}
.community-uls .community-titles{
   display: flex;
   padding-top: 20rpx;
   height: 80rpx;
}
.community-uls .community-titles view{
    width: 200rpx;
    text-align: center;
    color: #8C8C8C;
    font-size: 30rpx;
}
.blood-border{
    border-bottom: solid 5rpx #8EB85C;
    padding-bottom: 10rpx;
    font-size: 37rpx;
    font-weight: 600;
    color: #000000;
}
/* 信息列表 */
.community-lis{
  background: #fff;
}
.community-lis .list-body{
  width: 88%;
  margin: 0 auto;
  border-bottom: solid 1rpx #F4F3F3;
  padding-bottom: 20rpx;
  margin-top: 20rpx;
  display: flex
}
.community-lis .list-body .lis-text{
    font-size: 28rpx;
    margin-right: 20rpx;
    padding-top: 5rpx;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal !important;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.community-lis .list-body .lis-text .lis-message{
   display: flex;
   color: #A6A6A6;
   font-size: 25rpx;
   margin-top: 20rpx;
}
.community-lis .list-body .lis-text .lis-message .lis-date{
   width: 70%;
}

.community-lis .lis-imgs image{
   width: 230rpx;
   height: 140rpx;
   border-radius: 20rpx;
}
/*轮播图*/
.swiper-block{
  height: 540rpx;
  width: 100%;
}
.swiper-item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  overflow:unset;
}
.slide-image{
  height:270rpx;
  width: 550rpx;
  border-radius: 20rpx 20rpx 0 0;
  z-index: 1;  
}
.active{
  /* 放大 */
  transform: scale(1.14); 
  /* 动画效果 */
  transition:all .2s ease-in 0s;
  z-index: 20; 
  width: 482rpx;
}
.imgs-book{
   height: 300rpx;
}
.space {
    margin-top: 20rpx;
    margin-left: 34rpx;
    margin-bottom: 10rpx;
}

.swiper-body{
  border-radius:20rpx;
  width: 550rpx;
  height: 400rpx;
  margin: 0 30rpx;
  background: #fff;
  box-shadow: 0px 0px 20rpx rgba(0, 0,0,.1); 
}
.swiper-body .imgs-name{
   font-size: 28rpx;
   padding-left: 20rpx;
}
.swiper-body .imgs-advance{
   display: flex;
}
.swiper-body .imgs-advance .imgs-date{
   font-size: 20rpx;
   padding-left: 20rpx;
   width: 70%;
   line-height: 40rpx;
   color: #A9A9A9;
}
.swiper-body .imgs-advance .imgs-button{
   font-size: 25rpx;
   line-height: 40rpx;
   width: 125rpx;
   text-align: center;
   background: #8EB85C;
   color: #fff;
   border-radius: 5rpx;
}


/* ///////活动主体 */
.activity-Null{
   width: 300rpx;
   margin: 0 auto;
   margin-top: 340rpx;
}
.activity-Null .null-imgs{
   width: 222rpx;
   margin: 0 auto;
}
.activity-Null .null-imgs image{
   width: 222rpx;
   height: 140rpx;
     
}
.activity-Null .null-title{
    font-size: 32rpx;
    color: #666666;
    text-align: center;
    margin-top: 30rpx;
}

.activity-lis{
   width: 92%;
   margin: 0 auto;
   border-radius: 20rpx;
   background: #fff;
   box-shadow: 0px 0px 20rpx rgba(0, 0,0,.2); 
   margin-top: 20rpx;
   padding-bottom: 20rpx;
}
.activity-lis .activity-imgs image{
   width: 100%;
   height: 350rpx;
   border-radius: 20rpx 20rpx 0 0;
}
.activity-lis .activity-advance{
  display: flex;
}
.activity-lis .activity-title{
  font-size: 35rpx;
  padding-left: 20rpx;
}
.activity-lis .activity-advance .activity-date{
   font-size: 25rpx;
   padding-left: 20rpx;
   width: 72%;
   line-height: 50rpx;
   color: #A9A9A9;
}
.activity-lis .activity-advance .activity-button{
   font-size: 30rpx;
   line-height: 50rpx;
   width: 150rpx;
   text-align: center;
   background: #8EB85C;
   color: #fff;
   border-radius: 5rpx;
}