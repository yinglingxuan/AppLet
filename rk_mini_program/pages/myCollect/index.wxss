/* pages/myCollect/index.wxss */
.community-top{
   display: flex;
   padding: 0 20rpx;
   line-height: 65rpx;
   background: #fff;
}
.community-top view{
   width: 50%;
   text-align: center;
   font-size: 30rpx;
   color: #8C8C8C;
}
.community-top view text{
  padding: 10rpx 0;
}
.text-border{
  border-bottom: solid 5rpx #8EB85C;
  font-size: 37rpx;
  font-weight: 600;
  color: #000000;
}


/* 社区收藏 */
.community-lis .list-body{
  width: 90%;
  margin: 0 auto;
  padding: 30rpx 20rpx;
  border-radius: 20rpx;
  background: #fff;
  margin-top: 20rpx;
  display: flex
}
.community-lis .list-body .lis-text{
    font-size: 28rpx;
    margin-right: 20rpx;
    padding-top: 5rpx;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal !important;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.community-lis .list-body .lis-text .lis-message{
   display: flex;
   color: #A6A6A6;
   font-size: 25rpx;
   margin-top: 20rpx;
}
.community-lis .list-body .lis-text .lis-message .lis-date{
   width: 70%;
}

.community-lis .lis-imgs image{
   width: 230rpx;
   height: 140rpx;
   border-radius: 20rpx;
}
.deletes{
   background: #FF5C32;
   color: #fff;
   font-size: 28rpx;
   width: 130rpx;
   text-align: center;
   height: 210rpx;

   display: table-cell;
   vertical-align:middle;
}

/* //商品收藏 */
.product-lis .product-body{
  width: 90%;
  margin: 0 auto;
  padding: 30rpx 20rpx;
  border-radius: 20rpx;
  background: #fff;
  margin-top: 20rpx;
  display: flex
}
.product-lis .product-body .product-imgs{
   width: 140rpx;
}
.product-lis .product-body .product-imgs image{
   width: 120rpx;
   height: 120rpx;
}
.product-lis .product-body .product-title{
   width: 60%;
}
.product-lis .product-body .product-title .product-name{
   font-size: 32rpx;
   color: #000000;
}
.product-lis .product-body .product-title .product-price{
   font-size: 28rpx;
   color: #FD3D3D;
   margin-top: 25rpx;
   font-weight: 600;
}
.product-lis .product-body  .product-buy{
    width: 20%;
    font-size: 32rpx;
    color: #FD3D3D;
    padding-top: 75rpx;
}

/* //如果为空的样式 */

.Null-body{
   width: 260rpx;
   margin: 0 auto;
   margin-top: 45%;
}
.Null-body .Null-imgs image{
   width: 246rpx;
   height: 148rpx;
   margin: auto;
}
.Null-body .Null-text{
   font-size: 32rpx;
   color: #666666;
}