.details-body .details-top .top-right .top-inventory{
   color: rgba(102, 102, 102, 1);
   font-size: 25rpx;
   margin-top: 10rpx;
}
 .details-body .details-top .top-right .top-selected{
  font-size: 30rpx;
  color: #9EC273;
}
.details-body .details-top .top-hide{
   font-size: 30rpx;
   margin-top: 10rpx;
}
/* 规格 */
.specification{
  width: 93%;
  margin: 0 auto;
}
.specification .specification-name{
   font-size: 35rpx;
   margin: 20rpx 0;
}
.specification .specification-list{
   display: flex;
   margin: 50rpx 0;
}
.specification .specification-list .lists{
   font-size: 30rpx;
   width: 120rpx;
   margin-right: 20rpx;
   text-align: center;
   background: #F0F0F0;
   border-radius: 10rpx;
   padding: 5rpx;
}

.specification .specification-list .newLists{
   font-size: 30rpx;
   width: 120rpx;
   margin-right: 20rpx;
   text-align: center;
   background: #fff;
   border: solid 1rpx #8EB85C;
   color: #8EB85C;
   border-radius: 10rpx;
   padding: 5rpx;
}

.quantity .quantity-body{
    width: 93%;
    margin: 0 auto;
    display: flex;
}
.quantity .quantity-body .left{
   width: 51%;
   font-size: 30rpx;
}
/* 商品规格下面的按钮 */
.bottoms{
  width: 93%;
  margin: 0 auto;
  display: flex;
  margin-top: 70rpx;
}
.bottoms .bottoms-add{
  width: 47%;
  margin-right: 6%;
}
.bottoms .bottoms-add button{
  font-size: 30rpx;
  line-height: 80rpx;
  height: 80rpx;
  background: #333333;
  color: #fff;
}
.bottoms .bottoms-affirm{
  width: 47%;
}
.bottoms .bottoms-affirm button{
  font-size: 30rpx;
  line-height: 80rpx;
  height: 80rpx;
  background: #8EB85C;
  color: #fff;
}

/* 返回到顶部 */
.roof{
   position: fixed;
   bottom: 100rpx;
