/* pages/details/comment/index.wxss */
.bodys{
  background: #F6F7F9;
  height: 1000rpx;
  padding-top:5rpx; 
}
.comment-ul{
  width: 93%;
  margin: 0 auto;
}
.comment-ul .comment-lis{
   background: #fff;
   padding: 20rpx;
   margin: 25rpx 0;
}
.comment-ul .comment-lis .comment-top{
   display: flex;
   margin-left: 20rpx;
}
.comment-ul .comment-lis .comment-top .comment-head image{
   width: 80rpx;
   height: 80rpx;
   border-radius: 50%;
}
.comment-ul .comment-lis .comment-top  .comment-message{
    margin-left: 20rpx;
}
.comment-ul .comment-lis .comment-top  .comment-message .comment-name{
    font-size: 30rpx;
    font-weight: 600;
    line-height: 55rpx;
}
.comment-ul .comment-lis .comment-top  .comment-message .comment-date{
   font-size: 20rpx;
   color: #999999;
}
.comment-ul .comment-lis .comment-text{
   margin-left: 20rpx;
   font-size: 30rpx;
}
.comment-ul .comment-lis .comment-imgs{
   display: flex;
   margin-left: 20rpx;
   margin-top: 40rpx;
}
.comment-ul .comment-lis .comment-imgs image{
   margin-right: 30rpx;
}

/* 购物车 */
.shopping-trolley{
  border-top: solid 1rpx #E6E8EB;
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0rpx;
  background: #fff;
  color: #999999;
  font-size: 28rpx;
}
.shopping-trolley .shopping-boty{
  display: flex;
  width: 93%;
  margin: 0 auto;  
}
.shopping-trolley .shopping-boty .collect .collect-inco{
  margin-right: 30rpx;
  margin-top: 10rpx;
}
.shopping-trolley .shopping-boty .collect .collect-inco image{
  width: 45rpx;
  height: 45rpx;
  margin-left: 10rpx;
}


.shopping-trolley .shopping-boty .shopping{
  width: 90rpx;
}
.shopping-trolley .shopping-boty .shopping .shopping-inco{
  margin-right: 30rpx;
  margin-top: 12rpx;
}
.shopping-trolley .shopping-boty .shopping .shopping-inco image{
  width: 45rpx;
  height: 45rpx;
  margin-left: 10rpx;
}

.shopping-trolley .shopping-boty .shopping .count{
   position:absolute;
   background:  red;
   z-index: 30;
   top: -10rpx;
   left: 150rpx;
   width: 30rpx;
   line-height: 30rpx;
   font-size: 25rpx;
   text-align: center;
   border-radius: 50%;
   color: #fff;
}
.shopping-trolley .shopping-boty .shopping-add{
    width: 35%;
    margin: 0 20rpx;
    margin-top: 10rpx;
}
.shopping-trolley .shopping-boty .shopping-add button{
  font-size: 30rpx;
  background: #333333;
  color: #fff;
  line-height: 80rpx;
  height: 80rpx;
  
}
.shopping-trolley .shopping-boty .buy{
    width: 45%;
    margin-top: 10rpx;
}
.shopping-trolley .shopping-boty .buy button{
  font-size: 30rpx;
  background: #8EB85C;
  color: #fff;
  line-height: 80rpx;
  height: 80rpx;
}